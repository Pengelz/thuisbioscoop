from tkinter import *
from tkinter.messagebox import showinfo

window = Tk()

textLabel=Label(master=window, background="Green", width=80, height=40)
textLabel.pack(side=LEFT)

def klik_vandaag():
    vandaagLabel = Label(master=window, text="Film 1\n\n\nFilm 2\n\n\nFilm 3\n\n\nFilm 4\n\n\nFilm 5", background="Green")
    vandaagLabel.place(x=50, y=50)
    vandaagaanbiederLabel = Label(master=window, text="Aanbieder 1\n\n\nAanbieder 2\n\n\nAanbieder 3\n\n\nAanbieder 4\n\n\nAanbieder 5", background="Green")
    vandaagaanbiederLabel.place(x=150, y=50)

knop_vandaag = Button(window, text="Vandaag", command=klik_vandaag)
knop_vandaag.place(x=50, y=10)

def klik_morgen():
    morgenLabel = Label(master=window, text="Film 1\n\n\nFilm 2\n\n\nFilm 3\n\n\nFilm 4\n\n\nFilm 5", background="Green")
    morgenLabel.place(x=300, y=50)
    morgenaanbiederLabel = Label(master=window, text="Aanbieder 1\n\n\nAanbieder 2\n\n\nAanbieder 3\n\n\nAanbieder 4\n\n\nAanbieder 5", background="Green")
    morgenaanbiederLabel.place(x=400, y=50)

knop_morgen = Button(window, text="Morgen", command=klik_morgen)
knop_morgen.place(x=300, y=10)

stopButton = Button(window, text='ALLU AKBAR', command=window.quit)
stopButton.place(x=50,y=300)


window.mainloop()
